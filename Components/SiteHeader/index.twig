<header class="site-header">
    <div class="container">
        <div class="site-header__row">
            <div class="site-header-logo">
                <a href="{{ site.url }}">{% include 'Assets/header-logo.svg' %}</a>
            </div>
            <div class="site-header__mobile-btn">
                <span></span>
            </div>
            <div id="js-site-header-menu" class="site-header-menu">
                <nav class="site-header-nav">
                    <ul>
                        {% for item in header_menu.items %}
                            <li class="{{ item.classes | join(' ') }}">
                                <a href="{{ item.link }}">{{ item.title }}</a>
                            </li>
                        {% endfor %}
                    </ul>
                </nav>
                <div class="site-header-buttons">
                    <ul>
                        <li>
                            <a class="btn btn--black-border" href="{{ get_in_touch_link.url }}">{{ get_in_touch_link.title }}</a>
                        </li>
                        <li>
                            <button id="js-header-join-btn" class="btn btn--coral">Join the Waitlist</button>
                        </li>
                    </ul>
                </div>
                <div class="site-header-social__row">
                    {% if linkedin_url %}
                        <div class="site-header-social__col">
                            <a href="{{ linkedin_url }}">{% include 'Assets/linkedin.svg' %}</a>
                        </div>
                    {% endif %}
                    {% if facebook_url %}
                        <div class="site-header-social__col">
                            <a href="{{ facebook_url }}">{% include 'Assets/facebook.svg' %}</a>
                        </div>
                    {% endif %}
                    {% if instagram_url %}
                        <div class="site-header-social__col">
                            <a href="{{ instagram_url }}">{% include 'Assets/instgram.svg' %}</a>
                        </div>
                    {% endif %}
                    {% if twitter_url %}
                        <div class="site-header-social__col">
                            <a href="{{ twitter_url }}">{% include 'Assets/twitter.svg' %}</a>
                        </div>
                    {% endif %}
                    {% if youtube_url %}
                        <div class="site-header-social__col">
                            <a href="{{ youtube_url }}">{% include 'Assets/youtube.svg' %}</a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</header>
<div id="js-vityl-waitlist-popup-wrapper" class="vityl-waitlist-popup-wrapper hide">
    <div id="js-vityl-waitlist-popup" class="vityl-waitlist-popup">
        <div id="js-vityl-waitlist-popup__close-btn" class="vityl-waitlist-popup__close-btn">
            <span></span>
        </div>
        <div class="vityl-waitlist-popup__inner">
            <h4 class="vityl-h4">{{ waitlist_title }}</h4>
            <div class="vityl-waitlist-popup__form">
                {{ waitlist_gravity_form_shortcode|shortcodes }}
            </div>
        </div>
    </div>
</div>